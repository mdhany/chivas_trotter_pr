
<!-- Intro Header -->

<header class="intro">
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-sm-offset-6">

            <h1 class="brand-heading">
              <%= image_tag 'logo-chivaspr.png', width: 250, class: 'img-responsive' %>
               </h1>
          <div class="fondo-avion"></div>
            <div class="text-hide gana">
              GANA un viaje a Escocia.
              <%= image_tag 'tl-chivaspr.png', width: 250, class: 'img-responsive' %>
              <%= image_tag 'tl-destileria.png', width: 250, class: 'img-responsive' %>
            </div>
            <small>Please enjoy Chivas responsible</small>
            <p><small style="font-size:15px;">Concurso comienza el 15 de octubre y termina el 31 de diciembre del 2015</small></p>

        </div>

      </div>
    </div>
  </div>

</header>

<div class="copyright">
  <small>El consumo de alcohol perjudica la salud. Ley 42-01. Disfruta Chivas Regal responsablemente. CHIVAS REGAL® 12 Years Old Blended Scotch Whisky. 40% Alc./Vol. (80 Proof). © 2015 Pernod Ricard Dominicana, Santo Domingo, R.D.</small>
</div>


<!-- Mecanica Section -->

<div class="mecanica">
  <section id="about" class="container content-section text-center">
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-hide">¡Participar es fácil!<%= image_tag "tl-pasos.png", class: 'img-responsive' %></h2>
        <div class="row">
          <div class="col-md-3">
            <%= image_tag "step1.png", class: 'img-responsive' %>
            </div>
          <div class="col-md-5">
            <%= image_tag "step2.png", class: 'img-responsive hidden-sm hidden-xs' %>
            <%= image_tag "step2w.png", class: 'img-responsive visible-sm visible-xs' %>
          </div>
          <div class="col-md-4">
            <%= image_tag "step3.png", class: 'img-responsive hidden-sm hidden-xs' %>
            <%= image_tag "step3w.png", class: 'img-responsive visible-sm visible-xs' %>
          </div>
        </div>
        <a href="#download"  class="page-scroll btn btn-default btn-red btn-lg btn-grande">Regístrate</a>
      </div>
    </div>
  </section>
</div>

<!-- Registrase Section -->
<div class="row">
<div class="registrate">
  <section id="download" class="content-section text-center">
    <div class="download-section">
      <div class="container">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
          <h1>REGISTRO</h1>

          <div class="formulario">
            <%= form_tag({action: :participate}, multipart: true, id: "consumidor") do %>
              <div class="form-group">
                <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Nombre Completo', required: 'required' %>
              </div>
              <div class="form-group">
                <div class="form-group">
                  <%= text_field_tag :identification, nil, class: 'form-control', placeholder: "CEDULA o Pasaporte", required: 'required' %>
                </div>
                <%#= date_field_tag :birth, nil, class: 'form-control', placeholder: "Fecha de nacimiento DD/MM/AAAA", required: 'required' %>
                <%= label_tag :birth, "Fecha de Nacimiento" %>
                <br/>
                <%= date_select :birth, nil, prompt: { day: 'Día', month: 'Mes', year: 'Año' }, use_month_numbers: true, order: [:day, :month, :year], start_year: 1930, end_year: 1998, class: 'form-control', required: 'required' %>
              </div>
              <div class="form-group">
                <%= number_field_tag :mobile, nil, class: 'form-control', placeholder: "Telefono", required: 'required' %>
              </div>
              <div class="form-group">
                <%= email_field_tag :email, nil, class: 'form-control', placeholder: "Email", required: 'required' %>

                <br />
                <h2>FACTURA</h2>
                <div class="form-group">
                  <%= text_field_tag :number, nil, class: 'form-control', placeholder: "Número de Factura", required: 'required' %>
                </div>
                <br />
                <h4>Elige una foto de tu factura</h4>
                <div class="form-group">
                  <%= file_field_tag :picture, capture: "camera", accept: "image/*", class: 'form-chivas', required: 'required' %>
                  <div class="form-group term"><%= check_box_tag :acepto, 1, false, required: 'required' %> <a class="page-scroll" href="#terminos">Acepto los Términos y Condiciones</a></div>
                </div>
                <div class="enviar">
                  <%= submit_tag "ENVIAR DATOS", class: 'page-scroll btn btn-default btn-lg btnsend' %>
                </div>
            <% end %>


          </div>
</div>
        </div>
      </div>
    </div>
  </section>
</div>
</div>

<div class="messageend" style="display: none;">
    <div id="blackgb"></div>
    <div id="inline" style=" text-align:center;">
      <a class="btn btn-circle page-scroll" id="closediv" href="#contact">
        <i class="icon icon-remove animated"></i>
      </a>
      <br/>
      <h1>¡FELICIDADES!</h1>
      <h2>TU REGISTRO SE HA COMPLETADO EXITOSAMENTE</h2>
      <p>Entérate si eres un ganador en nuestra página de facebook</p>
      <p>
      <div class="fb-follow" data-href="https://www.facebook.com/ChivasDominicana/" data-width="300" data-height="200" data-layout="button" data-show-faces="true"></div>
      </p>
    </div>
</div>

<!-- TERMINOS Section -->
<div class="row">
<div class="terminos">
  <section id="terminos" class="content-section text-center">
    <div class="container">
      <div class="col-md-6 col-md-offset-3">
        <p><%= image_tag "logo-gentlemen.png", class: 'img-responsive' %></p>

        <h1>TÉRMINOS Y CONDICIONES</h1>
        <div class="overflow" style="text-align: justify; padding: 15px;">
          <p style=" font-size: 16px;">
          <%= render 'terms' %>
          </p>

        </div>
        <br/>
        <a href="#download" class="page-scroll btn btn-lg btn-dark">ACEPTO</a>

      </div>
    </div>
  </section>
</div>
</div>
<!-- Contact Section -->
<div class="row">
<section id="contact" class="container content-section text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h1>GANADORES</h1>
      <ul>
        <div style="overflow: auto; width: 100%; height: 300px;">
        <li style="display:none;"><p>VIERNES 2 DE OCTUBRE</p></li>
         <%= 'Aún no hay ganadores disponibles' if @ganadores.blank? %>
        <% @ganadores.each do |g| %>

            <li><b><%= g.customer.name unless g.customer.blank? %>.</b> Céd. x<%= g.customer.identification.last(4)  unless g.customer.blank? %> / Premio: <%= g.gift.name unless g.gift.blank? %> / Fecha: <%= g.created_at.to_date %></li>
        <% end %>
        </div>
      </ul>



    </div>
  </div>
</section>
</div>
<%= javascript_tag do -%>

    var thisHash = window.location.hash;
    jQuery(document).ready(function() {
        if(window.location.hash) {
            $(".messageend").show();
        }
    }); // ready

    $("#closediv").click(function() {
        $("#inline").hide(),
        $("#blackgb").hide(),
        $(this).hide();
    });

<% end -%>